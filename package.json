{
    "name": "react-express-webpack-babel-setup",
    "version": "1.0.0",
    "description": "",
    "scripts": {
        "client:dist": "webpack --mode production --progress --colors",
        "client:dev": "webpack-dev-server --mode development --devtool inline-source-map --hot --colors",
        "server:dist": "babel src --out-dir dist",
        "server:dev": "nodemon --exec babel-node ./src/server/server.js",
        "dev": "concurrently --kill-others \"npm run client:dev\" \"npm run server:dev\"",
        "build": "npm run client:dist && npm run server:dist",
        "start": "node dist/server/index.js",
        "lint": "eslint src",
        "lint:fix": "eslint --fix src",
        "format": "prettier './**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc.json",
        "format:fix": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc",
        "test": "npm run test:all",
        "test:all": "jest test/**/**/*.test.js --verbose --coverage",
        "test:client": "jest test/client/**/*.test.js --verbose --coverage",
        "test:server": "jest test/server/**/*.test.js --verbose --coverage",
        "test:watch": "npm test -- --watch-All"
    },
    "keywords": [],
    "author": "",
    "license": "",
    "dependencies": {
        "@material-ui/core": "^4.11.0",
        "@material-ui/icons": "^4.9.1",
        "babel-polyfill": "^6.26.0",
        "clsx": "^1.1.1",
        "connected-react-router": "^6.8.0",
        "express": "^4.16.4",
        "history": "^4.10.1",
        "notistack": "^1.0.0",
        "prop-types": "^15.7.2",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-redux": "^7.2.1",
        "react-router-dom": "^5.2.0",
        "react-virtualized": "^9.22.2",
        "redux": "^4.0.5",
        "redux-devtools-extension": "^2.13.8",
        "redux-logger": "^3.0.6",
        "redux-thunk": "^2.3.0",
        "regenerator-runtime": "^0.13.7",
        "socket.io": "^2.3.0",
        "socket.io-client": "^2.3.0",
        "socket.io-middleware": "^2.0.1",
        "url-loader": "^4.1.1",
        "uuid": "^8.3.0",
        "winston": "^2.4.5"
    },
    "devDependencies": {
        "@babel/cli": "^7.11.6",
        "@babel/core": "7.2.2",
        "@babel/node": "^7.10.5",
        "@babel/plugin-proposal-class-properties": "^7.12.1",
        "@babel/preset-env": "7.2.3",
        "@babel/preset-react": "7.0.0",
        "babel-eslint": "^10.1.0",
        "babel-jest": "^24.9.0",
        "babel-loader": "8.0.4",
        "clean-webpack-plugin": "^1.0.0",
        "concurrently": "^5.3.0",
        "css-loader": "^3.6.0",
        "enzyme": "^3.11.0",
        "enzyme-adapter-react-16": "^1.15.6",
        "eslint": "^6.8.0",
        "eslint-config-airbnb": "^18.2.1",
        "eslint-config-node": "^4.1.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-react": "^7.22.0",
        "eslint-plugin-react-hooks": "^1.7.0",
        "file-loader": "^4.3.0",
        "html-webpack-plugin": "^3.2.0",
        "jest": "^24.9.0",
        "nodemon": "^1.18.10",
        "prettier": "^2.2.1",
        "randomstring": "^1.1.5",
        "react-test-renderer": "^16.14.0",
        "redux-mock-store": "^1.5.4",
        "style-loader": "^1.2.1",
        "testdouble": "^3.16.1",
        "webpack": "^4.5.0",
        "webpack-cli": "^3.0.8",
        "webpack-dev-server": "^3.1.3"
    },
    "jest": {
        "moduleNameMapper": {
            "\\.(jpg|ico|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
            "\\.(css|less)$": "<rootDir>/__mocks__/fileMock.js"
        }
    }
}
